{
  "name": "dapperink.com",
  "tasks": {
    "bower": {
      "vendor": {
        "framework": "NewSpring/junction-framework"
      }
    },
    "sass": {
      "src": "_source/client/stylesheets/**/*",
      "dest": "dapperink/client/stylesheets",
      "lint": true,
      "comb": true
    },
    "javascript": {
      "src": "_source/**/*",
      "dest": "dapperink"
    },
    "markup": {
      "src": "_source/client/templates/**/*",
      "dest": "dapperink/client/templates",
      "minify": true
    },
    "copy": {
      "src": "_source/public/**/*",
      "dest": "dapperink/public"
    },
    "private": {
      "@extend": "copy",
      "src": "_source/private/**/*",
      "dest": "dapperink/private"
    },
    "meteor": {
      "dev": true,
      "src": "dapperink",
      "packages": [
        "meteor-platform",

        "iron:router",
        "multiply:iron-router-progress",
        "meteorhacks:fast-render",
        "meteorhacks:subs-manager",
        "manuelschoebel:ms-seo",

        "fastclick",

        "raix:handlebar-helpers",

        "aldeed:collection2",

        "mizzao:user-status",
        "meteorhacks:kadira"

        "cfs:standard-packages",
        "cfs:s3",

        "ccorcos:transitioner"
      ],
      "platforms": [
        "server",
        "browser",
        "ios"
      ]
    }
  },
  "test": {
    "before": "meteor run",
    "mocha-casperjs": {
      "src": "dapperink/tests/**/*"
    },
    "after": "meteor close"
  }
}
