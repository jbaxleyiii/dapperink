{
  "name": "dapperink.com",
  "tasks": {
    "bower": {
      "vendor": {
        "framework": "NewSpring/junction-framework"
      }
    },
    "sass": {
      "src": "_source/client/stylesheets/**/*",
      "dest": "dapperink/client/stylesheets",
      "lint": true,
      "comb": true
    },
    "javascript": {
      "src": "_source/**/*",
      "dest": "dapperink"
    },
    "markup": {
      "src": "_source/client/templates/**/*",
      "dest": "dapperink/client/templates",
      "minify": true
    },
    "copy": {
      "src": "_source/public/**/*",
      "dest": "dapperink/public"
    },
    "settings": {
      "@extend": "copy",
      "src": "settings",
      "dest": "dapperink/",
      "ext": [
        "json"
      ]
    },
    "private": {
      "@extend": "copy",
      "src": "_source/private/**/*",
      "dest": "dapperink/private"
    },
    "meteor": {
      "dev": true,
      "src": "dapperink",
      "settings": "settings.json",
      "packages": [
        "meteor-platform",
        "reactive-var",
        "iron:router",
        "accounts-base",
        "accounts-password",
        "multiply:iron-router-progress",
        "meteorhacks:fast-render",
        "meteorhacks:subs-manager",
        "manuelschoebel:ms-seo",
        "raix:handlebar-helpers",
        "peerlibrary:base-component",
        "peerlibrary:blaze-components",
        "percolate:velocityjs",
        "aldeed:collection2",
        "mizzao:user-status",
        "meteorhacks:kadira",
        "cfs:standard-packages",
        "cfs:gridfs",
        "cfs:s3",
        "ccorcos:transitioner"
      ],
      "platforms": [
        "server",
        "browser",
        "ios"
      ]
    }
  },
  "test": {
    "before": "meteor run",
    "mocha-casperjs": {
      "src": "dapperink/tests/**/*"
    },
    "after": "meteor close"
  }
}
